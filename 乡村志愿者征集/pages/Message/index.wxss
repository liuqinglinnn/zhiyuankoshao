page {
  background-color: #f5f5f5;
}
.chat {
  width: 100%;
  background-color: white;
}
.chat .chatfor {
  width: 95%;
  height: 150rpx;
  margin-left: 2.5%;
  margin-right: 2.5%;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
}
.chat .chatfor .ueserpic {
  margin-top: 25rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: antiquewhite;
  border-radius: 50%;
  overflow: hidden;
}
.chat .chatfor .ueserpic .ueserpic_img {
  width: 100rpx;
  height: 100rpx;
}
.chat .chatfor .num {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background-color: red;
  color: white;
  left: 95rpx;
  margin-top: 15rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 25rpx;
}
.chat .chatfor .base {
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  justify-content: center;
  height: 100%;
}
.chat .chatfor .base .basename {
  font-size: 35rpx;
}
.chat .chatfor .base .basecontent {
  font-size: 30rpx;
  opacity: 0.5;
}
.chat .chatfor .time {
  position: absolute;
  right: 20rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  opacity: 0.5;
}
.end {
  width: 100%;
  opacity: 0.5;
  text-align: center;
  font-size: 30rpx;
  margin-top: 25rpx;
}
