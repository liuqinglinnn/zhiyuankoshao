page {
  background-color: #f5f5f5;
}
.Input {
  bottom: 0rpx;
  position: fixed;
  width: 100%;
  height: 150rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.Input .yuyin {
  margin-left: 25rpx;
  height: 50rpx;
  width: 50rpx;
}
.Input .yuyin .yuyin_image {
  height: 50rpx;
  width: 50rpx;
}
.Input .inputbutton {
  background-color: #f5f5f5;
  border-radius: 50rpx;
  height: 75rpx;
  width: 60%;
  margin-left: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.Input .inputbutton .inputbutton_ {
  margin-left: 25rpx;
}
.Input .biaoqin {
  height: 50rpx;
  width: 50rpx;
  margin-left: 25rpx;
}
.Input .biaoqin .biaoqin_image {
  height: 50rpx;
  width: 50rpx;
}
.Input .wenjian {
  height: 75rpx;
  width: 75rpx;
  margin-left: 25rpx;
}
.Input .wenjian .wenjian_image {
  height: 75rpx;
  width: 75rpx;
}
.Input .send {
  background-color: #0cca80;
  border-radius: 50rpx;
  height: 75rpx;
  width: 150rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.Input .send .send_text {
  color: white;
  font-size: 30rpx;
}
.message {
  width: 100%;
}
.message .message_ {
  margin-top: 20rpx;
  width: 95%;
  margin-left: 2.5%;
  margin-right: 2.5%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-bottom: 50rpx;
}
.message .message_ .he {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.message .message_ .he .message_he {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  overflow: hidden;
}
.message .message_ .he .message_he .message_he_img {
  width: 75rpx;
  height: 75rpx;
}
.message .message_ .he .message_he_mes {
  margin-left: 25rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-bottom-left-radius: 30rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  border: 2rpx solid #e5e5ea;
  height: 75rpx;
}
.message .message_ .he .message_he_mes .message_he_mes_text {
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
.message .message_ .me {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  justify-content: flex-end;
  margin-left: auto;
}
.message .message_ .me .message_me {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  overflow: hidden;
}
.message .message_ .me .message_me .message_me_img {
  width: 75rpx;
  height: 75rpx;
}
.message .message_ .me .message_me_mes {
  background-color: #0ccb82;
  color: white;
  margin-right: 25rpx;
  display: flex;
  align-items: center;
  border-bottom-right-radius: 30rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  border: 2rpx solid #e5e5ea;
  height: 75rpx;
}
.message .message_ .me .message_me_mes .message_me_mes_text {
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
.message .message_ .me .message_me_img {
  color: white;
  display: flex;
  align-items: baseline;
  height: 200rpx;
  width: 300rpx;
}
.message .message_ .me .message_me_img .message_me_mes_img {
  padding-right: 20rpx;
  height: 200rpx;
  width: 300rpx;
}
