page {
  background-color: #f5f5f5;
}
.head {
  width: 100%;
  height: 300rpx;
}
.head .body {
  margin-left: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.head .body .text {
  opacity: 0.7;
  font-size: 30rpx;
  margin-top: 50rpx;
}
.head .body .coin {
  color: #0cca80;
  font-size: 50rpx;
  font-weight: bolder;
}
.head .body .other {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  align-items: center;
}
.head .body .other .one {
  height: 30rpx;
  width: 30rpx;
}
.head .body .other .two {
  margin-left: 10rpx;
  font-size: 30rpx;
}
.head .body .other .three {
  margin-left: 20rpx;
  height: 30rpx;
  width: 30rpx;
}
.head .body .other .four {
  margin-left: 10rpx;
  font-size: 30rpx;
}
.shop {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80%;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  box-shadow: 3rpx 3rpx 10rpx 2rpx #c8c3c3;
  background-color: #fafafa;
}
.shop .shopscroll {
  height: 100%;
  width: 100%;
}
.shop .shopscroll .fenlie {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}
.shop .shopscroll .fenlie .shopscroll_ {
  width: 50%;
  display: flex;
  flex-direction: column;
}
.shop .shopscroll .fenlie .shopscroll_ .content {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.shop .shopscroll .fenlie .shopscroll_ .content .items {
  height: 400rpx;
  margin-left: 5.5%;
  width: 89%;
  background-color: #ffffff;
  border-radius: 15rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.shop .shopscroll .fenlie .shopscroll_ .content .items .ipic {
  width: 80%;
  margin-top: 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.shop .shopscroll .fenlie .shopscroll_ .content .items .ipic .iimg {
  overflow: hidden;
  border-radius: 15rpx;
  width: 100%;
  height: 100%;
  padding-bottom: 100%;
  background-color: aliceblue;
}
.shop .shopscroll .fenlie .shopscroll_ .content .items .iname {
  width: 80%;
  font-size: 30rpx;
  justify-content: flex-start;
}
.shop .shopscroll .fenlie .shopscroll_ .content .items .icost {
  color: #0cca80;
  width: 80%;
  font-size: 30rpx;
  justify-content: flex-start;
}
.shop .textend {
  margin-top: 50rpx;
  width: 100%;
  text-align: center;
  opacity: 0.5;
  padding-bottom: 75rpx;
}
